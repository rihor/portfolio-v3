---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import profilePicture from '../assets/profile.jpg';
---

<header>
	<div>
		<h1>Pedro Pinho</h1>
		<div>
			<p>
				Love to code, amazed by tools and reading a lot.
				<br />
				At the moment I'm going through an artesan journey, to find elegant solutions to real problems.
			</p>
			<span class="country">Brazil</span>
		</div>
		<ul class="list_social" aria-label="contact links">
			<li>
				<a href="mailto:pedro.rihor@outlook.com" aria-label="Email">
					<Icon name="email" />
				</a>
			</li>
			<li>
				<a href="https://github.com/rihor" aria-label="Github">
					<Icon name="github" />
				</a>
			</li>
			<li>
				<a href="https://www.linkedin.com/in/phpinhov/" aria-label="Linkedin">
					<Icon name="linkedin" />
				</a>
			</li>
		</ul>
	</div>
	<div>
		<Image src={profilePicture} alt="Pedro Pinho" width={200} height={200} />
	</div>
</header>

<style>
	header {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		gap: 32px;
		width: 100%;

		& h1 {
			font-weight: 700;
		}
	}

	img {
		border-radius: 8px;
	}

	p {
		max-width: 44ch;
	}

	.country {
		font-size: 0.8em;
	}

	.list_social {
		list-style: none;
		display: flex;
		gap: 12px;
		padding-left: 0;
		font-size: 0.8em;

		& a {
			background-color: rgb(255, 255, 255, 0.1);
			padding: 6px 12px;
			border-radius: 4px;
			color: #fff;
			transition: opacity 160ms ease-in-out;
			display: flex;
			align-items: center;
			justify-content: center;

			> * {
				width: 16px;
				height: 16px;
			}
		}

		& a:hover {
			opacity: 0.7;
		}

		& a:active {
			opacity: 0.4;
		}
	}
</style>
